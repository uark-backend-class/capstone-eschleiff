<div class='position-absolute top-50 start-50 translate-middle'>
    <div class='card text-center rounded-3 shadow-lg'>
        <form class="form-floating" action='/profile' method='POST'>
            <div class='card-body'>
                <h1 class='card-title'> {{ title }} </h1> 
            
                <hr>

                <div class="col-12">
                    <label for='firstName' class="form-label"><strong>First Name</strong></label>
                    <input class="form-control" id='firstName' type='text' name='firstName' value={{firstName}}>

                    <label for='lastName' class="form-label"><strong>Last Name</strong></label>
                    <input class="form-control" id='lastName' type='text' name='lastName' value={{lastName}}>

                    <label for='email' class="form-label"><strong>Email</strong></label>
                    <input class="form-control" id='email' type='email' name='email' value={{email}}>
                </div>

                <hr>
                <button class='btn btn-primary btn-lg col-6' type='submit'>Update My Profile</button>
                <hr>
                <a href="/" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>